# Ghostty Configuration - Synced across machines
# Last updated: 2025-12-07
# Machines: Wills-Studio, Wills-MBA, tower.local

# ============================================
# SHELL INTEGRATION (The good stuff!)
# ============================================
# Enable all the powerful shell integration features
shell-integration-features = cursor,sudo,ssh-terminfo,ssh-env,title

# ============================================
# APPEARANCE
# ============================================
# Font - Using Monaco for consistency
font-family = Monaco
font-size = 17
font-thicken = true
adjust-cell-width = 2%
adjust-cell-height = 2%

# Colors and visibility
minimum-contrast = 3
bold-is-bright = true
# Custom bold color for extra pop
bold-color = #ffffff

# Selection
selection-foreground = #ffffff
selection-background = #3d59a8
selection-invert-fg-bg = false

# Cursor
cursor-style = bar
cursor-style-blink = false

# Window
window-padding-x = 8
window-padding-y = 4
window-decoration = auto
macos-titlebar-style = tabs
macos-option-as-alt = true

# Quick terminal (dropdown)
quick-terminal-position = top
quick-terminal-size = 50%
quick-terminal-screen = main
quick-terminal-animation-duration = 0.08

# ============================================
# BEHAVIOR
# ============================================
# Copy on select (like iTerm)
copy-on-select = clipboard

# Right-click pastes (or use for copy if you prefer)
right-click-action = paste

# Don't confirm close when at prompt (shell integration knows!)
confirm-close-surface = false

# Clear selection when you start typing
selection-clear-on-typing = true

# Scrollback
scrollback-limit = 50000

# UX improvements
mouse-hide-while-typing = true
resize-overlay = always
unfocused-split-opacity = 0.85
link-url = true

# ============================================
# KEYBINDS (Power user additions)
# ============================================
# Command palette (already default but explicit)
keybind = super+shift+p=toggle_command_palette

# Quick terminal (dropdown) toggle
keybind = ctrl+`=toggle_quick_terminal

# Split navigation (vim-style - using super+ctrl to avoid CLI conflicts)
keybind = super+ctrl+h=goto_split:left
keybind = super+ctrl+j=goto_split:down
keybind = super+ctrl+k=goto_split:up
keybind = super+ctrl+l=goto_split:right

# Resize splits
keybind = ctrl+shift+h=resize_split:left,20
keybind = ctrl+shift+j=resize_split:down,20
keybind = ctrl+shift+k=resize_split:up,20
keybind = ctrl+shift+l=resize_split:right,20

# Toggle split zoom (maximize current pane)
keybind = super+shift+enter=toggle_split_zoom

# Write scrollback to file (great for debugging)
keybind = super+shift+s=write_scrollback_file:open

# Reset window size
keybind = super+shift+0=reset_window_size

# ============================================
# THEME - Synesthesia Color Palette
# ============================================
# Based on wsig's grapheme-color synesthesia system
# Warm terracotta/amber foundation with lavender accents

# Base colors - Claude dark mode inspired
background = #1f170f
foreground = #eee8df

# Cursor - terracotta accent
cursor-color = #e08151
cursor-text = #1f170f

# Selection - Leavn lavender
selection-background = #3d2a48
selection-foreground = #fff9f0

# ANSI colors - Synesthesia aligned
# Black variants (warm, not cold)
palette = 0=#2a231b
palette = 8=#5a4a3a

# Red variants (Media burgundy)
palette = 1=#cc6666
palette = 9=#e08080

# Green variants (Scripts/success green)
palette = 2=#8cb369
palette = 10=#a8cf85

# Yellow variants (SigStack amber)
palette = 3=#d4a93a
palette = 11=#e8c060

# Blue variants (HubDash teal, BRAIN neural)
palette = 4=#7aa2c9
palette = 12=#94bce3

# Magenta variants (Leavn lavender, Modcaster)
palette = 5=#9d8ec2
palette = 13=#b7a8dc

# Cyan variants (Catalyst, info)
palette = 6=#6bb8c0
palette = 14=#85d2da

# White variants (warm cream, not stark)
palette = 7=#c8c0b8
palette = 15=#fff9f0

# ============================================
# CLAUDE X KEYBINDINGS
# ============================================
# Quick launch Claude X session
keybind = super+shift+c=text:claudex\n

# Sync Claude X configs from tower
keybind = super+alt+s=text:~/.claude/sync-from-tower.sh && echo "✅ Claude X synced"\n

# Check Claude X status
keybind = super+alt+x=text:~/.claude/claudex-status.sh\n

# Continue last Claude session
keybind = super+alt+r=text:claude --resume\n

# Quick ccusage check
keybind = super+alt+u=text:npx ccusage daily --breakdown\n

# Sync conversations to tower
keybind = super+alt+shift+s=text:~/.claude/sync-conversations.sh && echo "✅ Conversations synced"\n

# ============================================
# PERFORMANCE
# ============================================
# GPU acceleration (Metal on macOS)
gtk-single-instance = true
