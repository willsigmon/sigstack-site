{
  "name": "Cross-Machine SSH Orchestrator",
  "nodes": [
    {
      "parameters": {
        "httpMethod": "POST",
        "path": "ssh-command",
        "options": {
          "responseMode": "responseNode"
        }
      },
      "name": "SSH Command Webhook",
      "type": "n8n-nodes-base.webhook",
      "position": [250, 300],
      "webhookId": "ssh-cmd"
    },
    {
      "parameters": {
        "conditions": {
          "options": { "caseSensitive": true, "leftValue": "", "typeValidation": "strict" },
          "conditions": [
            { "leftValue": "={{ $json.body.target }}", "rightValue": "tower", "operator": { "type": "string", "operation": "equals" } }
          ]
        }
      },
      "name": "Target Tower?",
      "type": "n8n-nodes-base.if",
      "position": [450, 200]
    },
    {
      "parameters": {
        "conditions": {
          "options": { "caseSensitive": true, "leftValue": "", "typeValidation": "strict" },
          "conditions": [
            { "leftValue": "={{ $json.body.target }}", "rightValue": "mba", "operator": { "type": "string", "operation": "equals" } }
          ]
        }
      },
      "name": "Target MBA?",
      "type": "n8n-nodes-base.if",
      "position": [450, 350]
    },
    {
      "parameters": {
        "conditions": {
          "options": { "caseSensitive": true, "leftValue": "", "typeValidation": "strict" },
          "conditions": [
            { "leftValue": "={{ $json.body.target }}", "rightValue": "studio", "operator": { "type": "string", "operation": "equals" } }
          ]
        }
      },
      "name": "Target Studio?",
      "type": "n8n-nodes-base.if",
      "position": [450, 500]
    },
    {
      "parameters": {
        "command": "={{ $json.body.command }}",
        "options": {}
      },
      "name": "Run on Tower",
      "type": "n8n-nodes-base.ssh",
      "position": [700, 200],
      "credentials": { "sshPassword": { "id": "tower-ssh", "name": "Tower SSH" } }
    },
    {
      "parameters": {
        "command": "={{ $json.body.command }}",
        "options": {}
      },
      "name": "Run on MBA",
      "type": "n8n-nodes-base.ssh",
      "position": [700, 350],
      "credentials": { "sshPassword": { "id": "mba-ssh", "name": "MBA SSH" } }
    },
    {
      "parameters": {
        "command": "={{ $json.body.command }}",
        "options": {}
      },
      "name": "Run on Studio",
      "type": "n8n-nodes-base.ssh",
      "position": [700, 500],
      "credentials": { "sshPassword": { "id": "studio-ssh", "name": "Studio SSH" } }
    },
    {
      "parameters": {
        "respondWith": "json",
        "responseBody": "={{ { success: true, target: $json.body.target, output: $json.stdout, error: $json.stderr } }}"
      },
      "name": "Respond",
      "type": "n8n-nodes-base.respondToWebhook",
      "position": [950, 350]
    }
  ],
  "connections": {
    "SSH Command Webhook": { "main": [[{ "node": "Target Tower?", "type": "main", "index": 0 }, { "node": "Target MBA?", "type": "main", "index": 0 }, { "node": "Target Studio?", "type": "main", "index": 0 }]] },
    "Target Tower?": { "main": [[{ "node": "Run on Tower", "type": "main", "index": 0 }], []] },
    "Target MBA?": { "main": [[{ "node": "Run on MBA", "type": "main", "index": 0 }], []] },
    "Target Studio?": { "main": [[{ "node": "Run on Studio", "type": "main", "index": 0 }], []] },
    "Run on Tower": { "main": [[{ "node": "Respond", "type": "main", "index": 0 }]] },
    "Run on MBA": { "main": [[{ "node": "Respond", "type": "main", "index": 0 }]] },
    "Run on Studio": { "main": [[{ "node": "Respond", "type": "main", "index": 0 }]] }
  },
  "settings": { "executionOrder": "v1" }
}
