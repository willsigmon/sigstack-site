{
  "name": "Daily Backup Automation",
  "nodes": [
    {
      "parameters": {
        "rule": {
          "interval": [{ "field": "hours", "hour": 3 }]
        }
      },
      "name": "Daily 3AM",
      "type": "n8n-nodes-base.scheduleTrigger",
      "position": [250, 300]
    },
    {
      "parameters": {
        "command": "cd ~/.dotfiles-hub && git pull origin main 2>&1"
      },
      "name": "Pull Dotfiles",
      "type": "n8n-nodes-base.executeCommand",
      "position": [450, 200]
    },
    {
      "parameters": {
        "command": "rsync -avz --delete ~/.claude/skills/ ~/.dotfiles-hub/claude/skills/ 2>&1"
      },
      "name": "Sync Skills",
      "type": "n8n-nodes-base.executeCommand",
      "position": [650, 200]
    },
    {
      "parameters": {
        "command": "cd ~/.dotfiles-hub && git add -A && git diff --cached --quiet || git commit -m 'Daily backup $(date +%Y-%m-%d)' && git push origin main 2>&1"
      },
      "name": "Commit & Push",
      "type": "n8n-nodes-base.executeCommand",
      "position": [850, 200]
    },
    {
      "parameters": {
        "command": "tar -czf /tmp/leavn-backup-$(date +%Y%m%d).tar.gz ~/Library/Application\\ Support/Leavn 2>&1 || echo 'Leavn dir not found'"
      },
      "name": "Backup Leavn Data",
      "type": "n8n-nodes-base.executeCommand",
      "position": [450, 400]
    },
    {
      "parameters": {
        "command": "rsync -avz /tmp/leavn-backup-*.tar.gz root@tower.local:/mnt/user/backups/leavn/ 2>&1 && rm /tmp/leavn-backup-*.tar.gz"
      },
      "name": "Send to Tower",
      "type": "n8n-nodes-base.executeCommand",
      "position": [650, 400]
    },
    {
      "parameters": {
        "webhookUri": "={{ $env.DISCORD_WEBHOOK_URL }}",
        "text": "‚úÖ **Daily Backup Complete**\n\nüìÅ Dotfiles synced to GitHub\nüíæ Leavn data backed up to Tower\nüïê {{ $now.format('yyyy-MM-dd HH:mm') }}",
        "options": {}
      },
      "name": "Discord Success",
      "type": "n8n-nodes-base.discord",
      "position": [850, 400]
    }
  ],
  "connections": {
    "Daily 3AM": { "main": [[{ "node": "Pull Dotfiles", "type": "main", "index": 0 }, { "node": "Backup Leavn Data", "type": "main", "index": 0 }]] },
    "Pull Dotfiles": { "main": [[{ "node": "Sync Skills", "type": "main", "index": 0 }]] },
    "Sync Skills": { "main": [[{ "node": "Commit & Push", "type": "main", "index": 0 }]] },
    "Backup Leavn Data": { "main": [[{ "node": "Send to Tower", "type": "main", "index": 0 }]] },
    "Send to Tower": { "main": [[{ "node": "Discord Success", "type": "main", "index": 0 }]] }
  },
  "settings": { "executionOrder": "v1" }
}
